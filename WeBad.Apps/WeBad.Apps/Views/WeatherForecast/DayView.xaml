<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WeBad.Apps.Views.WeatherForecast.DayView">
    <ContentView.Content>
    <StackLayout
                Grid.Row="0"
                Orientation="Horizontal"
                Spacing="20"
                Padding="20,10,20,10">
        <Label                 
                HorizontalOptions="Start"
                VerticalTextAlignment="Center"
                TextColor="#404B51"
                FontSize="17"
                Text="{Binding NameOfDay}"
                />

        <Label 
            HorizontalOptions="EndAndExpand"
            VerticalTextAlignment="Center"
            TextColor="#404B51"
            FontSize="17"            
            >
            <Label.FormattedText>
                <FormattedString>
                        <Span Text="{Binding Temperature}"/>
                    <Span Text="&#176;"/>
                </FormattedString>
            </Label.FormattedText>
        </Label>

        <Image
                HorizontalOptions="End"
                Aspect="AspectFit"
                WidthRequest="32"
                HeightRequest="32"
                Source="{Binding Icon}"/>
    </StackLayout>
    </ContentView.Content>
</ContentView>